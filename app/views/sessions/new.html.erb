<div class="row">
  <div class="text-center">
    <h1>Sign In</h1>
  </div>

  <div class="col-md-6 col-md-offset-3">
    <%= form_tag "/sessions" do %>

      Email: <%= text_field_tag :email %>
      Password: <%= password_field_tag :password %>
      <%= submit_tag "Submit", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>