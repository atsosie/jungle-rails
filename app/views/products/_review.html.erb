<% if @product.reviews.blank? %>
  <p>No reviews for this product.</p>

<% else %>
  <% @product.reviews.reverse_each do |review| %>
      <dl class="dl-horizontal">
        <dt>Rating</dt>
        <dd><%= review.rating %></dd>
        <dt>Review</dt>
        <dd><%= review.description %></dd>

        <% if current_user && current_user.id === review.user_id %>
        <dd><%= link_to fa_icon('trash'), [review], class: 'btn btn-sm btn-danger review-delete', method: :delete, data: { confirm: "Are you sure you want to delete this review?" } %></dd>
        <% end %>
      </dl>

  <% end %>

<% end %>