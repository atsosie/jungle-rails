<% if @product.reviews.blank? %>
  <p>No reviews for this product.</p>
<% else %>
  <% @product.reviews.reverse_each do |review| %>
      <dl class="dl-horizontal">
        <dt>Rating</dt>
        <dd><%= review.rating %></dd>
        <dt>Review</dt>
        <dd><%= review.description %></dd>
      </dl>
  <% end %>
<% end %>