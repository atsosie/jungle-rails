<%= form_for([@product, @review]) do |f| %>
  <div class="form-group">
    <%= f.label :rating %><br />
    <%= f.select :rating, options_for_select([1, 2, 3, 4, 5]) %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div>
    <%= f.submit 'Submit', class: 'btn btn-primary'%>
  </div>
<% end %>