<%= form_for([@product, @review]) do |form| %>
  <div class="field">
    <%= form.label :rating %><br />
    <%= form.select :rating, options_for_select([1, 2, 3, 4, 5]) %>
  </div>
  <div class="field">
    <%= form.label :description %><br />
    <%= form.text_area :description %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>