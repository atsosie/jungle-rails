<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">
      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Rating</dt>
          <dd>
            <% if @product.reviews.average(:rating).blank? %>
              Not Yet Rated
            <%else%>
              <%= rating_as_stars @product.reviews.average(:rating) %>
            <%end%>
          </dd
          </dh>
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row buffer-top">
      <div class="col-xs-12 col-sm-8 col-md-8 pull-right">
        <% if current_user %>
          <div class="review panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Add a Review</h3>
            </div>
            <div class="panel-body">
              <%= render 'form' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="row buffer-top">
      <%= render 'review' %>
    </div>

  </article>

</section>
