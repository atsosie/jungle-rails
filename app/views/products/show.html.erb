<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
        <hr>
        <h4>Add a Review</h4>
        <%= form_for([@product, @product.reviews.build]) do |form| %>
          <div class="field">
            <%= form.label :rating %><br />
            <%= form.select(:rating, options_for_select([1, 2, 3, 4, 5])) %>
          </div>
          <div class="field">
            <%= form.label :description %><br />
            <%= form.text_area :description, id: :review_description %>
          </div>
          <div class="actions">
            <%= form.submit %>
          </div>
        <% end %>
        <h4>Reviews</h4>
        <% if @product.reviews.blank? %>
          <p>No reviews for this product.</p>
          <p>Insert button to submit review (link to form)</p>
        <% else %>
          <% @product.reviews.each do |review| %>
              <dl class="dl-horizontal">
                <dt>Rating</dt>
                <dd><%= review.rating %></dd>
                <dt>Review</dt>
                <dd><%= review.description %></dd>
              </dl>
          <% end %>
        <% end %>
      </div>
    </div>

  </article>

</section>
